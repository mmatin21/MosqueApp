<!-- app/views/expenses/_expenses_list.html.erb -->
<% if expenses.any? %>
  <h2>Filtered Expenses</h2>

  <table>
    <thead>
      <tr>
        <th>Month</th>
        <th>Total Amount</th>
      </tr>
    </thead>
    <tbody>
      <% expenses.each do |expense| %>
        <tr>
          <td><%= expense.month.strftime("%B %Y") %></td>
          <td><%= number_to_currency(expense.total_amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No expenses found for this period.</p>
<% end %>

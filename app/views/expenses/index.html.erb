
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Expenses" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Expenses</h1>
    <%= link_to "New expense", new_expense_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <h2>Filter Expenses</h2>
  <%= form_with model: Expense, method: :get, local: true do %>
    <div data-controller = "select" data-select-url-value="<%= months_expenses_path %>" data-select-param-value="year">
      <div>
        <label>Filter by Year:</label>
        <%= select_tag :year, options_for_select(@available_years, selected: params[:year]), include_blank: 'Select Year', data: { action: "change->select#change" } %>
      </div>
      <div>
        <label>Filter by Month:</label>
        <%= select_tag :months, [], {data: { select_target: "select" } } %>
      </div>
    </div>
    <%= submit_tag 'Filter', class: 'btn btn-primary' %>
  <% end %>
  <div id="expenses" class="min-w-full">
    <% @expenses.each do |expense| %>
      <%= render expense %>
      <p>
        <%= link_to "Show this expense", expense, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

<%= pie_chart @expenses.group(:name).sum(:amount), legend: false %>
<div class="antialiased bg-gray-50 dark:bg-gray-900">
  <main class="p-4 md:ml-64 h-auto pt-20">
    <div
        class="border-2 border-dashed rounded-lg border-gray-300 dark:border-gray-600 h-96 mb-4"
      >
      <%= area_chart @expenses.group_by_month(:expense_date).sum(:amount) %>
      </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
      <div class="border-2 border-dashed border-gray-300 rounded-lg dark:border-gray-600 h-32 md:h-64">
      </div>
      <div
          class="border-2 border-dashed rounded-lg border-gray-300 dark:border-gray-600 h-32 md:h-64"
        ></div>
      <div
          class="border-2 border-dashed rounded-lg border-gray-300 dark:border-gray-600 h-32 md:h-64"
        ></div>
      <div
          class="border-2 border-dashed rounded-lg border-gray-300 dark:border-gray-600 h-32 md:h-64"
        ></div>
    </div>
  </div>
</main>
</div>
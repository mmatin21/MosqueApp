<div class="antialiased bg-gray-50 dark:bg-gray-900">
  <main class="p-4 md:ml-64 h-auto pt-20">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <% content_for :title, "Fundraisers" %>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl"><%= @fundraiser.name %></h1>
      <div
            class="flex items-center space-x-6">
        <div>
          <h5 class="mb-1 text-gray-500 dark:text-gray-400">Donated Amount</h5>
          <p class="text-lg font-bold text-orange-600">
            <%= number_to_currency(@fundraiser.donations.sum(:amount)) %>
          </p>
        </div>
        <div>
          <h5 class="mb-1 text-gray-500 dark:text-gray-400">Goal Amount</h5>
          <p class="text-lg font-bold text-green-500">
            <%= number_to_currency(@fundraiser.goal_amount) %>
          </p>
        </div>
      </div>
    </div>
    <div class="border-gray-300 dark:border-gray-600 rounded-xl h-128">
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <%= render "tables/fundraiser_table", fundraiser: @fundraiser, table: @table_donations, query: @q, pagy: @pagy%>
      </div>
    </div>
  </main>
</div>
